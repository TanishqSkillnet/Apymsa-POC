{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "lib":["DOM"],
    "noEmitOnError": false,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": [
      "node",
      "jest"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
